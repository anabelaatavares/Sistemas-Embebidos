<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ipg.intensidadevozarduino.MainActivity">

    <TextView
        android:id="@+id/StatusTextView"
        android:layout_width="192dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:textColor="#FF7800"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView_modo"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnConnection" />

    <Button
        android:id="@+id/StartStopButton"
        android:layout_width="132dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:gravity="right"
        android:textSize="25sp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="364dp" />

    <Button
        android:id="@+id/btnConnection"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:onClick="btnConnectionOnClick"
        android:text="Ligar ao Arduino"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintRight_toLeftOf="@+id/StartStopButton"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.416"
        android:layout_marginBottom="371dp" />

    <TextView
        android:id="@+id/textView_modo"
        android:layout_width="128dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="Modo"
        app:layout_constraintBottom_toTopOf="@+id/StartStopButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
